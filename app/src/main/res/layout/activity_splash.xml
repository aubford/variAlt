<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.aubreyford.vario.SplashActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/spl_startFlight"
            android:src="@drawable/button2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00FFFFFF"
            android:adjustViewBounds="false"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Flight"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textSize="35dp" />

    </FrameLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:text="Enter Landing Alt."
        android:id="@+id/spl_enterLanding"
        android:layout_below="@+id/spl_landing"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:text="Auto Landing Alt."
        android:id="@+id/spl_autoLanding"
        android:layout_alignBottom="@+id/spl_enterLanding"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_alignTop="@+id/spl_enterLanding" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="My Flights"
        android:id="@+id/spl_myFlights"
        android:layout_below="@+id/spl_enterLanding"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Landing Zone Altitude"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 m"
        android:id="@+id/spl_landing"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#2bc600"
        android:textSize="30sp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
