<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aubreyford.vario.MainActivity"
    android:orientation="vertical"
    >


    <io.sule.gaugelibrary.GaugeView
    android:id="@+id/gauge_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffffff"
    gauge:showOuterShadow="false"

        gauge:divisions="10"
        gauge:subdivisions="5"
        gauge:rangeColors="@array/rangeColors"
        gauge:rangeValues="@array/ranges"

    gauge:showOuterRim="false"
    gauge:showInnerRim="false"
    gauge:needleWidth="0.010"
    gauge:needleHeight="0.40"
    gauge:scaleStartValue="-10"
    gauge:scaleEndValue="10"
    gauge:showNeedle="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="barometerAltitude"
        android:id="@+id/barometerAltitude"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="barometerRelativeAltitude"
        android:id="@+id/barometerRelativeAltitude"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mslpBarometerAltitude"
        android:id="@+id/mslpBarometerAltitude"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mslpBarometerRelativeAltitude"
        android:id="@+id/mslpBarometerRelativeAltitude"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mslp"
        android:id="@+id/mslp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="standardPressure"
        android:id="@+id/standardPressure"
        />









</LinearLayout>
